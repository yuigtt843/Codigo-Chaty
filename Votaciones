
dpi=(input("Ingrese su dpi : "))
if len(dpi)<13:
    print(" NO VALIDO ")
if len(dpi)>13:
    print(" NO VALIDO ")
if len(dpi)==13:
    print("Valido")
    print("Existen los partidos:")
